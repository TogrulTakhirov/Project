@using Otomation.Models.Sınıflar
@model List<SatisHaraket>
@{
    ViewBag.Title = "DepartmanDetay";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3> Departman Personel Satış</h3>

<div style="background-color: thistle; padding: 10px; border-radius: 10px; font-size: 18px; font-weight: 500;">@ViewBag.p</div>
<br />

<table class="table table-hover">
    <tr>
        <th>ID</th>
        <th> Tarih </th>
        <th> Adet </th>
        <th> Fiyat </th>
        <th> Toplam Tutar </th>
        <th> Urun </th>
        <th> Cari </th>
    </tr>
    <tr>
        @foreach (var k in Model)
        {
        <tr>
            <td>
                @k.Satisid
            </td>
            <td>
                @k.Tarihi
            </td>
            <td>
                @k.Adet
            </td>
            <td>
                @k.Fiyat
            </td>
            <td>
                @k.ToplamFutar
            </td>
            <td>
                @k.Urun.UrunAd
            </td>
            <td>
                @k.Cari.CariAd
            </td>
        </tr>
    }
    </table>