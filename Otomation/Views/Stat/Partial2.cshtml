@model IEnumerable<Otomation.Models.Sınıflar.SinifGrup3>

<div class="card">
    <div class="card-header">
        <h3 class="card-title">Kategori Tablosu</h3>
    </div>
    <!-- /.card-header -->
    <div class="card-body">
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th style="width: 10px">#</th>
                    <th>Kategori Adi</th>
                    <th></th>
                    <th style="width: 40px">Urun</th>
                </tr>
            </thead>
            <tbody>
                @{ int sirano = 0;}
                @foreach (var x in Model)
                {
                    <tr>

                        <td>@{ sirano++;}@sirano.</td>
                        <td>@x.Kategori</td>
                        <td>
                            @if (x.Sayi == 1)
                            {
                                <div class="progress progress-xs">
                                    <div class="progress-bar progress-bar-danger bg-danger" style="width: 45%"></div>
                                </div>
                            }
                            @if (x.Sayi == 2)
                            {
                                <div class="progress progress-xs ">
                                    <div class="progress-bar progress-bar-warning bg-warning" style="width: 70%"></div>
                                </div>
                            }
                            @if (x.Sayi == 3 || x.Sayi > 3)
                            {
                                <div class="progress progress-xs">
                                    <div class="progress-bar progress-bar-success bg-success" style="width: 100%"></div>
                                </div>
                            }
                        </td>
                        <td><span class="badge bg-danger">@x.Sayi</span></td>
                    </tr>

                }
            </tbody>
        </table>
    </div>
    <!-- /.card-body -->
    <div class="card-footer clearfix">
        <ul class="pagination pagination-sm m-0 float-right">
            <li class="page-item"><a class="page-link" href="#">&laquo;</a></li>
            <li class="page-item"><a class="page-link" href="#">1</a></li>
            <li class="page-item"><a class="page-link" href="#">2</a></li>
            <li class="page-item"><a class="page-link" href="#">3</a></li>
            <li class="page-item"><a class="page-link" href="#">&raquo;</a></li>
        </ul>
    </div>
</div>
