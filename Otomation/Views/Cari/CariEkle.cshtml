@model Otomation.Models.Sınıflar.Cari
@{
    ViewBag.Title = "CariEkle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2> Cari Ekle </h2>

<br />
<form class="form-group" method="post">

    @Html.LabelFor(x => x.CariAd)
    @Html.TextBoxFor(x => x.CariAd, new { @class = "form-control" })
    <br />
    @Html.LabelFor(x => x.CariSoyad)
    @Html.TextBoxFor(x => x.CariSoyad, new { @class = "form-control" })
    <br />
    @Html.LabelFor(x => x.CariMail)
    @Html.TextBoxFor(x => x.CariMail, new { @class = "form-control" })
    <br />
    @Html.LabelFor(x => x.CariSehir)
    @Html.TextBoxFor(x => x.CariSehir, new { @class = "form-control" })
    <br />
    <button class="btn btn-info" type="submit" id="submitButton">Ekle</button>

</form>